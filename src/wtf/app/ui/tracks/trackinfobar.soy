/**
 * TracksPanel info bar DOM.
 *
 * @author benvanik@google.com (Ben Vanik)
 */

{namespace wtf.app.ui.tracks.trackinfobar}


/**
 * Root control UI.
 */
{template .control}
  <div class="{css wtfAppUiTracksPanelInfoOuter}">
    <div class="{css wtfAppUiTracksPanelInfoHeader}">
    </div>
    <div class="{css kSrollBarInner} {css wtfAppUiTracksPanelInfoContent}">
    </div>
  </div>
{/template}


/**
 * An entry in the data table.
 * @param title Event title.
 * @param value Sort value (time/etc).
 * @param content Content line value.
 */
{template .entry}
  <div class="{css wtfAppUiTracksPanelInfoEntry}">
    <div class="{css wtfAppUiTracksPanelInfoEntryHeader}">
      <div class="{css wtfAppUiTracksPanelInfoEntryValue}">{$value}</div>
      <div class="{css wtfAppUiTracksPanelInfoEntryTitle}">{$title}</div>
    </div>
    <div class="{css wtfAppUiTracksPanelInfoEntryContent}"
        title="total count / total time / user time / average time">
      {$content}
    </div>
  </div>
{/template}
